    "keywords": ["notifier", "notification", "messages", "mail"],
    "homepage": "https://github.com/Notifier/Notifier",
    "license": "MIT",
    "authors": [
        {
            "name": "Dries De Peuter",
            "email": "dries@nousefreak.be",
            "homepage": "http://nousefreak.be"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "notifier/notifier": "~2.0@dev"
    },
    "require-dev": {
        "guzzle/guzzle": "~3.9"
